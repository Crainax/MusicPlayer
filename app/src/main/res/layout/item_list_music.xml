<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_singer"
        android:layout_width="64.0dip"
        android:layout_height="64.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/tv_duration"
        style="@style/ArtistStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:text="00:00" />

    <TextView
        android:id="@+id/tv_song_name"
        style="@style/SongNameStyle"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/iv_singer"
        android:layout_toRightOf="@id/iv_singer"
        android:layout_toLeftOf="@id/tv_duration"
        android:layout_toStartOf="@id/tv_duration" />

    <TextView
        android:id="@+id/tv_artist"
        style="@style/ArtistStyle"
        android:layout_alignBottom="@id/iv_singer"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/iv_singer"
        android:layout_toRightOf="@id/iv_singer"
        android:layout_toLeftOf="@id/tv_duration"
        android:layout_toStartOf="@id/tv_duration"/>


</RelativeLayout>